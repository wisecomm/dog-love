  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:dev": "env-cmd -f .env.development next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "validate": "pnpm lint && pnpm typecheck && pnpm build",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "deploy:copy": "rm -rf dist && mkdir -p dist/.next && cp -R .next/standalone/. dist/ && cp -R .next/static dist/.next/ && cp -R public dist/",
    "build:deploy:dev": "pnpm build:dev && pnpm deploy:copy && cp .env.development dist/.env",
    "build:deploy:prod": "pnpm build && pnpm deploy:copy && cp .env.production dist/.env"
