# 병렬 연구
# 여러 출처에서 동시에 정보를 수집

agent researcher:
  model: sonnet
  prompt: "당신은 연구 보조원입니다."

# 여러 측면을 병렬로 연구
parallel:
  history = session: researcher
    prompt: "역사적 배경을 조사하세요."
  current = session: researcher
    prompt: "이 분야의 현재 상태를 조사하세요."
  future = session: researcher
    prompt: "미래 트렌드와 예측을 조사하세요."

# 모든 연구 결합
session "포괄적인 연구 요약 작성"
  context: { history, current, future }
